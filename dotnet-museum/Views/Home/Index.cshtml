@{
    ViewData["Title"] = "Home";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<div class="container-fluid p-0">
    

    <section class="bg-dark text-light py-5 text-center">
        <div class="container">
            <h1 class="display-4 fw-bold">Welcome to the Dotnet Museum</h1>
            <p class="lead">Discover history, art, and culture in one place.</p>
            <a href="@Url.Action("Index", "Event")" class="btn btn-primary btn-lg mt-3">Explore Events</a>
        </div>
    </section>

    <section class="py-5">
        <div class="container">
            <h2 class="text-center mb-5">Our Highlights</h2>
            <div class="row g-4">

                <div class="col-md-6">
                    <div class="card h-100 shadow-sm">
                        <img src="~/images/homepage/artifacts.png" class="card-img-top" alt="Artifacts">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">Artifacts Collection</h5>
                            <p class="card-text flex-grow-1">Explore ancient artifacts from around the world, carefully preserved for your curiosity.</p>
                            <a href="@Url.Action("Index", "Artifact")" class="btn btn-outline-primary mt-2">View Collection</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card h-100 shadow-sm">
                        <img src="~/images/homepage/galleries.png" class="card-img-top" alt="Galleries">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">Exhibition Galleries</h5>
                            <p class="card-text flex-grow-1">Walk through beautifully curated galleries showcasing art and history.</p>
                            <a href="@Url.Action("Index", "Gallery")" class="btn btn-outline-primary mt-2">Explore Galleries</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <section class="bg-light py-5 text-center">
        <div class="container">
            <h2 class="mb-4">Plan Your Visit</h2>
            <p class="mb-4">Whether you’re a student, tourist, or history enthusiast, the Dotnet Museum has something for everyone.</p>
            <a href="@Url.Action("Book", "Booking")" class="btn btn-primary btn-lg">Book Your Tickets</a>
        </div>
    </section>

</div>
