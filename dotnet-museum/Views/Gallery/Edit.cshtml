@model dotnet_museum.Models.Gallery;

@{
    ViewBag.Title = "Edit Gallery";
}

<h1>Edit Gallery</h1>

<form asp-action="Edit" asp-controller="Gallery" method="post">
    
    <input type="hidden" asp-for="GalleryId"/>
    
    <div class="mb-3">
        <label asp-for="Name">Gallery Name:</label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description">Description:</label>
        <input asp-for="Description" type="text" class="form-control" id="floatingTextarea2" placeholder="Description" style="height: 100px">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" asp-controller="Gallery" class="btn btn-outline-secondary">Cancel</a>
</form>