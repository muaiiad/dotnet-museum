@model dotnet_museum.Models.Booking.BookingModel;

@{
    ViewBag.Title = "Confirm Booking";
}
<form asp-action="ConfirmBooking" asp-controller="Booking" method="post">

    <input type="hidden" asp-for="EventId" />
    <input type="hidden" asp-for="NumberOfTickets" />
    <input type="hidden" asp-for="CustomerName" />
    <input type="hidden" asp-for="CustomerPhone" />
    <input type="hidden" asp-for="ReservationType" />
    <input type="hidden" asp-for="TotalPrice" />
    
    <div class="card w-100 shadow-sm">
        <div class="card-body">
            <h1 class="card-title mb-3">Confirm Booking</h1>
            <p class="card-text"><strong>Event: </strong>@Model.Event.Title</p>
        </div>

        <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>Number Of Tickets:</strong> @Model.NumberOfTickets</li>
            <li class="list-group-item"><strong>Name:</strong> @Model.CustomerName</li>
            <li class="list-group-item"><strong>Phone Number:</strong> @Model.CustomerPhone</li>
            <li class="list-group-item"><strong>Reservation Type:</strong> @Model.ReservationType</li>
            <li class="list-group-item"><strong>Total Price:</strong> @Model.TotalPrice</li>
        </ul>

        <div class="card-body d-flex justify-content-end gap-2">
            <a asp-action="Book" asp-controller="Booking" class="btn btn-outline-secondary">Back</a>
            <button type="submit" class="btn btn-success">Confirm</button>
        </div>
    </div>
</form>