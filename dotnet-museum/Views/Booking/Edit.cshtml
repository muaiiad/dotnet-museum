@using dotnet_museum.Models.Booking
@model dotnet_museum.Models.Booking.BookingModel;

@{
    ViewBag.Title = "Edit Booking";
}


<h1>Edit Booking</h1>

<form asp-action="Edit" asp-controller="Booking" method="post">
    <input type="hidden" asp-for="BookingId" />
    <div class="mb-3">
        <label asp-for="CustomerName">Name:</label>
        <input asp-for="CustomerName" class="form-control" placeholder="Customer Name">
        <span asp-validation-for="CustomerName" class="text-danger"></span>
    </div>


    <div class="mb-3">
        <label asp-for="CustomerPhone">Phone Number:</label>
        <input asp-for="CustomerPhone" class="form-control" placeholder="Phone Number">
        <span asp-validation-for="CustomerPhone" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NumberOfTickets">Number Of Tickets:</label>
        <input asp-for="NumberOfTickets" class="form-control" placeholder="Number Of Tickets">
        <span asp-validation-for="NumberOfTickets" class="text-danger"></span>
    </div>

    <label asp-for="ReservationType"> Reservation Type:</label>

    <div class="form-check">
        <input class="form-check-input" type="radio" asp-for="ReservationType" value="@ReservationType.Regular" checked>
        <label class="form-check-label">
            @ReservationType.Regular
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" asp-for="ReservationType" value="@ReservationType.TourismCompany">
        <label class="form-check-label">
            @ReservationType.TourismCompany
        </label>
    </div>

    <div class="mb-3">
        <label asp-for="EventId">Event:</label>
        <select class="form-select" asp-for="EventId" asp-items="ViewBag.AllEvents"></select>
    </div>

    <div class="mb-3">
        <label asp-for="TourismCompanyId">Company Name:</label>
        <select class="form-select" asp-for="TourismCompanyId" asp-items="ViewBag.Companies"></select>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" asp-controller="Booking" class="btn btn-outline-secondary">Cancel</a>

</form>